<div class="reg-form col-lg-6 offset-lg-3">
  <div class="row justify-content-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <h2 class="mt-3 mb-3">Sign up</h2>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div> 
    <div class="field">
      <%= f.label :user_name %><br />
      <%= f.text_field :user_name, autofocus: true, class: "input" %>
    </div>
    <div class="field">
      <%= f.label :password, class: "mt-3" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, class: "mt-3" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div class="actions">
      <%= f.label "Profile Photo"%>
      <%= f.file_field :avatar%>
    </div>
    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-primary mt-3"%>
    </div>
    <div class="mt-4 mb-4 log-txt">
      <small> Already have an account ? >> <%= render "devise/shared/links" %> </small>
    <div>
  <% end %>

  </div>
</div>
