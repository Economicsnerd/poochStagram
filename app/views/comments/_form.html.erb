<%= simple_form_for([@pooch, @pooch.comments.build]) do |f| %>
<div class="field">
  <div class="control">
    <%= f.input :comment, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }  %>
  </div>
</div>
<%= f.button :submit, 'Leave a reply', class: "btn btn-primary mt-3 mb-3" %>
<% end %>